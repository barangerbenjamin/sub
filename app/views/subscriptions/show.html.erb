<div class="card">
    <div class="card-header">
        <strong><%= @subscription.name.capitalize %></strong>
    </div>
    <div class="card-body">
        <h6 class="card-title font-weight-light">Start Date</h6>
        <h6 class="card-subtitle mb-2 text-muted font-weight-bold"><%= @subscription.start_at %></h6>
        <h6 class="card-title font-weight-light">End Date</h6>
        <h6 class="card-subtitle mb-2 text-muted font-weight-bold"><%= @subscription.ends_at.nil? ? 'Unlimited' : @subscription.ends_at %></h6>
        <h6 class="card-title font-weight-light">Price</h6>
        <h6 class="card-subtitle mb-2 text-muted font-weight-bold">Â£<%= @subscription.price %></h6>
        <h6 class="card-title font-weight-light">Category</h6>
        <h6 class="card-subtitle mb-2 text-muted font-weight-bold"><%= @subscription.category %></h6>
        
        <div class="d-flex justify-content-between">
            <%= link_to 'Edit', edit_subscription_path(@subscription), class: "btn btn-primary" %>
            <%= link_to 'Delete', subscription_path(@subscription), method: :delete, class: "btn btn-danger" %>
        </div>
    </div>
</div>
