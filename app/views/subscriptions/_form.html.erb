<%= simple_form_for(subscription) do |f| %>
    <%= f.input :name %>
    <%= f.input :price %>
    <%= f.input :category, collection: ['Food', 'Insurance', 'Service', 'Sport' ].sort + ['Other'] %>
    <%= f.input :start_at, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.input :ends_at, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.submit "Submit", class: 'btn btn-primary' %>
<% end %>