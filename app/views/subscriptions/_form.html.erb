<%= simple_form_for(subscription) do |f| %>
    <%= f.input :name %>
    <%= f.input :price, label: 'Price (Â£ - pounds)' %>
    <%= f.input :category, collection: ['Food', 'Insurance', 'Bills', 'Sport', 'Rusty', 'Leisure' ].sort + ['Other'] %>
    <%= f.input :start_at, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.input :duration, collection: ['Unlimited'] + (1..36).to_a, label: 'Duration (months)' %>
    <%= f.submit "Submit", class: 'btn btn-primary' %>
<% end %>