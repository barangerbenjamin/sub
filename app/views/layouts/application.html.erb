    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
    <div class="container">
      <div class="row min-vh-100 align-items-center">
        <div class="col-xs-12 col-md-6 offset-md-3">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>